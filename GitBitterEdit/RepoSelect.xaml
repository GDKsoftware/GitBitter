<Window x:Class="GitBitterEdit.RepoSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitBitterEdit"
        mc:Ignorable="d"
        Title="RepoSelect" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="lstRepositories" Margin="10,30" MouseDoubleClick="lstRepositories_MouseDoubleClick"/>
        <Button x:Name="btnOk" Content="Add" Margin="0,0,10,5" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,5" Width="75" Height="20" VerticalAlignment="Bottom" Click="btnCancel_Click"/>
        <Label x:Name="lblTeam" Content="Team" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="edTeam" Margin="71,4,10,0" VerticalAlignment="Top" SelectionChanged="edTeam_SelectionChanged"/>
    </Grid>
</Window>
